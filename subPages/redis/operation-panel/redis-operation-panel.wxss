.uni-list-item {
  border-top-style: solid;
  border-top-width: 0px;
  border-top-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 0px;
  border-bottom-color: #eee;
  font-size: 14px;
}
.uni-list-item__container {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 12px 15px;
  height: 25px;
  flex: 1;
  position: relative;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.uni-list-item__content-title {
  font-size: 8px;
  color: #666;
}
 .uni-row {
  margin-bottom: 5px;
}
.demo-uni-col {
  height: 33px;
  border-radius: 5px;
}
.text-center {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
}
.vetically {
  display: flex;
  align-items: center;
}
.dark {
  background-color: #ffffff;
  border: 1px solid #e5e5e5;
}
.light {
  background-color: #ffffff;
}
.uni-row-body {
  display: block;
  padding: 5rpx 10rpx 0;
}
.uni-search-bar-body {
  display: block;
  padding: 0px;
}
.uni-searchbar__box {
  border: 1px solid #e5e5e5;
  background-color: #ffffff;
}
.uni-row {
  margin-bottom: 0px;
}
.uni-searchbar {
  padding: 5px !important;
}

